<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="mt-5"><%= @book.title %></h1>

      <% if @book.image.attached? %>
        <%= image_tag @book.image, alt: 'book image', class: 'img-fluid' %>
      <% end %>

      <p class="mt-3"><strong>Description:</strong> <%= @book.description %></p>
      <p><strong>Quantity:</strong> <%= @book.quantity %></p>
      <p><strong>Pages:</strong> <%= @book.pages %></p>
      <p><strong>Price:</strong> <%= @book.price %></p>
      <p><strong>Publisher:</strong> <%= @book.publisher %></p>
      <p><strong>Publication Date:</strong> <%= @book.publication_date %></p>
      <p><strong>Author:</strong> <%= @book.author.name %></p>

      <p><strong>Genres:</strong></p>
      <ul>
        <% @book.genres.each do |genre| %>
          <li><%= link_to genre.name, genre_path(genre) %></li>
        <% end %>
      </ul>

      <form action="/cart_items" accept-charset="UTF-8" method="post" class="mt-3">
        <%= csrf_meta_tags %>

        <input type="hidden" value="<%= @book.id %>" name="book_id" id="book_id" />

        <button type="submit" class="btn btn-primary" data-disable-with="Adding to Cart">Add to Cart</button>
      </form>

      <%= link_to 'Back', books_path, class: 'mt-3 btn btn-secondary' %>
    </div>
  </div>
</div>
