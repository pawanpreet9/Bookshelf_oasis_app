<!-- app/views/orders/_invoice.html.erb -->
<h1>Invoice</h1>
<p><strong>Order ID:</strong> <%= @order.id %></p>
<p><strong>Customer Name:</strong> <%= @order.customer.name %></p>
<p><strong>Address:</strong> <%= @order.customer.address %></p>
<p><strong>City:</strong> <%= @order.customer.city %></p>
<p><strong>Province:</strong> <%= @order.customer.province.name %></p>
<p><strong>Postal Code:</strong> <%= @order.customer.postal_code %></p>

<!-- Display order items, quantities, and prices here -->

<p><strong>Subtotal:</strong> <%= number_to_currency(@order.subtotal) %></p>
<p><strong>Taxes:</strong> <%= number_to_currency(@order.total_taxes) %></p>
<p><strong>Total Price (including taxes):</strong> <%= number_to_currency(@order.total_price) %></p>
