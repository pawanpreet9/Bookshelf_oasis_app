<h2>Customer Account Details</h2>

<p><strong>Email:</strong> <%= current_customer.email %></p>

<h2>Address Information</h2>
<% if current_customer.address.present? %>
  <p><strong>Address:</strong> <%= current_customer.address %></p>
  <p><strong>City:</strong> <%= current_customer.city %></p>
  <p><strong>Postal Code:</strong> <%= current_customer.postal_code %></p>
    <p><strong>Province:</strong> <%= current_customer.province.name %></p>
<% else %>
  <p>No address added yet.</p>
<% end %>

<h2>Add/Update Address</h2>
<%= form_for(current_customer, url: add_address_path, method: :patch) do |f| %>
  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
  </div>
   <div class="field">
    <%= f.label :province_id, "Province" %>
    <%= f.collection_select :province_id, Province.all, :id, :name, prompt: true %>
  </div>
  <%= f.submit "Add/Update Address" %>
<% end %>
